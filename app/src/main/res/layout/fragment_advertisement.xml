<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/advert_bg"
    tools:context="com.wzlab.smartsecurity.activity.message.AdvertisementFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_msg_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wzlab.smartsecurity.widget.LoadingLayout
            android:id="@+id/loading_layout_msg_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_msg_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.wzlab.smartsecurity.widget.LoadingLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
