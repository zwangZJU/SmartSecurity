<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/content_background"

    tools:context="com.wzlab.smartsecurity.activity.repair.RepairProgressFragment">

    <com.wzlab.smartsecurity.widget.LoadingLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading_layout_repair_process">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp">

                <com.baoyachi.stepview.HorizontalStepView
                    android:id="@+id/step_view_repair_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:baselineAlignedChildIndex="11"
                    android:scrollbarSize="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white_top"
                    android:textSize="16sp"
                    android:id="@+id/tv_repair_progress_content"/>

                <com.baoyachi.stepview.VerticalStepView
                    android:layout_marginTop="20dp"
                    android:background="@color/white_top"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/step_view_state_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
        </ScrollView>
    </com.wzlab.smartsecurity.widget.LoadingLayout>
</FrameLayout>
