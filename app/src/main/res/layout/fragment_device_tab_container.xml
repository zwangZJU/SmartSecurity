<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clickable="true"
    tools:context="com.wzlab.smartsecurity.activity.main.DeviceTabContainerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_device_list"
            android:layout_width="match_parent"

            android:layout_height="40dp"
            app:tabIndicatorColor="@color/colorPrimary"
            android:background="@color/white_top"
            app:tabSelectedTextColor="@color/colorPrimary">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能终端" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摄像设备" />


        </android.support.design.widget.TabLayout>

        <com.wzlab.smartsecurity.widget.NoScrollViewPager
            android:id="@+id/vp_device_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee">

        </com.wzlab.smartsecurity.widget.NoScrollViewPager>
    </LinearLayout>
</FrameLayout>
