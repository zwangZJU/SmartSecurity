<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:id="@+id/iv_poi_icon"
        android:src="@drawable/ic_location"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sematic_description"
        android:maxLines="1"
        android:textColor="@color/layout_device_info_id"
        android:textSize="16sp"

        android:layout_alignTop="@+id/iv_poi_icon"
        android:layout_toRightOf="@+id/iv_poi_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_complete_address"
        android:maxLines="1"
        android:layout_alignBottom="@+id/iv_poi_icon"
        android:layout_alignLeft="@id/tv_sematic_description"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tv_complete_address"
        android:layout_below="@+id/tv_complete_address"
        android:layout_marginRight="10dp"
        android:background="#ddd" />

</RelativeLayout>
